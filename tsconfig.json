{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": true,
    "target": "es2017",
    "plugins": [
      {
        "transform": "@nativescript/webpack/dist/transformers/NativeClass/index",
        "type": "raw"
      }
    ]
  },
  "files": [
    "src/index.ts",
    "src/postinstall.ts"
  ]
}